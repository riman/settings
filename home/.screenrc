term xterm
defshell -bash
defscrollback 5000
bindkey "\033[5;5~" prev
bindkey "\033[6;5~" next
bindkey "\033\060" select 1
bindkey "\033\061" select 1
bindkey "\033\062" select 2
bindkey "\033\063" select 3
bindkey "\033\064" select 4
bindkey "\033\065" select 5
bindkey "\033\066" select 6
bindkey "\033\067" select 7
bindkey "\033\070" select 8
bindkey "\033\071" select 9
bindkey "\0330" select 10
# ctrl+shift+T for en_US and ru_RU locales
bindkey "\302\224" screen 1
bindkey "\033\024" screen 1

autodetach on
startup_message off
hardstatus alwayslastline
shelltitle 'bash'
#hardstatus string '%{gk}[%{wk}%?%-Lw%?%{=b kR}(%{W}%n*%f %t%?(%u)%?%{=b kR})%{= w}%?%+Lw%?%? %{g}][%{d}%l%{g}][ %{= w}%Y/%m/%d %0C:%s%a%{g} ]%{W}'
hardstatus string "%{= Kw}   %-w%{= kG}%n %t%{= Kw}%+w  %=%Y-%m-%d %c"
bind c screen 1
bind h focus left
bind j focus down
bind k focus up
bind l focus right
bind t focus top
bind b focus bottom
screen 1

